= form_for @question_answer do |f|
  - if @question_answer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question_answer.errors.count, "error")} prohibited this question_answer from being saved:"
      %ul
        - @question_answer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :choice
    = f.text_field :choice
  .actions
    = f.submit 'Save'
