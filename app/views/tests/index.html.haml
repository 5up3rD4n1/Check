%h1 Listing tests

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Begins at
      %th Ends at
      %th
      %th
      %th

  %tbody
    - @tests.each do |test|
      %tr
        %td= test.name
        %td= test.description
        %td= test.begins_at
        %td= test.ends_at
        %td= link_to 'Show', test
        %td= link_to 'Edit', edit_test_path(test)
        %td= link_to 'Destroy', test, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Test', new_test_path
